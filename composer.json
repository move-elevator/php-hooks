{
  "name": "tm/php-hooks",
  "description": "PhpHooks is a collection of some useful customizable checks that you can use as git pre-commit hook.",
  "keywords": [
    "git", "hooks"
  ],
  "authors": [
    {
      "name": "Tommy Muehle",
      "email": "tommy.muehle@gmail.com",
      "homepage": "https://tommy-muehle.de"
    }
  ],
  "license": "MIT",
  "require": {
    "php": ">=5.5.0",
    "symfony/console": "2.5.*@dev",
    "symfony/process": "2.5.*@dev",
    "symfony/yaml": "2.5.*@dev",
    "phpmd/phpmd" : "@stable",
    "sebastian/phpcpd": "@stable",
    "squizlabs/php_codesniffer": "1.5.4",
    "phpunit/phpunit": "4.4.*",
    "sensiolabs/security-checker": "*"
  },
  "require-dev": {
    "codeclimate/php-test-reporter": "dev-master"
  },
  "autoload": {
    "psr-4": {
      "PhpHooks\\": "src//PhpHooks//"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "PhpHooks\\Tests\\": "tests//PhpHooks//Tests//"
    }
  },
  "support": {
    "email": "tommy.muehle@gmail.com",
    "source": "https://github.com/tommy-muehle/php-hooks",
    "issues": "https://github.com/tommy-muehle/php-hooks/issues"
  },
  "config": {
    "bin-dir": "bin"
  }
}
